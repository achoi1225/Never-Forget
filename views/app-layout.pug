doctype html
html
  head
      block head
        title="Never Forget"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        script(src="https://kit.fontawesome.com/e145510635.js" crossorigin="anonymous")
  body
    nav.navbar
      button.navbar__menu-button
      input.navbar__search(type='text' id='searchBar')
      form(action="/users/logout" method="POST")
        button.navbar__item.navbar__item-button(type="submit")
          i.fas.fa-sign-out-alt
    div.listMenu
      include includes/list-menu.pug
    div.taskList
      include includes/task-list.pug
    div.details
      include includes/details.pug
