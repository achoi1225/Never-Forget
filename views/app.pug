doctype html
html
  head
      block head
        title="Never Forget"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel='stylesheet' href='/stylesheets/app-layout.css')
        script(src="https://kit.fontawesome.com/e145510635.js" crossorigin="anonymous")
  body
    nav.navbar.navbar--app
      button.navbar__item.navbar__menu-button#app-menu
        i.fas.fa-bars
      .navbar__search-container
        label.navbar__search-label(for='searchBar')
          i.fas.fa-search.navbar__search-icon
          input.navbar__search-input(type='text' id='searchBar')
      form(action="/users/logout" method="POST")
        button.navbar__item.navbar__menu-button(type="submit")
          i.fas.fa-sign-out-alt
    .main-content
      div.list-menu
        include includes/list-menu.pug
      div.task-list
        include includes/task-list.pug
      div.summary
        include includes/summary.pug
      div.details
        include includes/details.pug
    .search-results-container
      .search-results


  script(src="/javascripts/searchbar.js" type='module' defer)
  script(src="/javascripts/app-frontend.js" type='module' defer)
